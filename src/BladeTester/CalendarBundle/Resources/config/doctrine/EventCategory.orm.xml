<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="BladeTester\CalendarBundle\Entity\EventCategory" table="event_categories"
                    repository-class="BladeTester\CalendarBundle\Repository\EventCategoryRepository">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>


        <field name="name" column="name" type="string" length="255" />

        <field name="color" column="color" type="string" length="255" />


    </entity>

</doctrine-mapping>
